<div class="container h-screen">
  <h2>ユーザー一覧</h2>
  <div class="max-w-full px-4">
    <div id="map" class="w-full"></div>
  </div>
</div>

<style>
  #map {
      height: 600px;
    }
</style>

<script>
  let map;
  let marker;
  const mountainPosition = { lat: 36.204824, lng: 138.252924 }

  function initMap() {
    map = new google.maps.Map(document.getElementById("map"), {
      center: mountainPosition,
      zoom: 8,
    });

    marker = new google.maps.Marker({
      position: mountainPosition,
      map,
    });
  }

  window.initMap = initMap;
</script>

<script async src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap" defer></script>