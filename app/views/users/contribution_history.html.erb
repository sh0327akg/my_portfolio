<div class="container p-8">
  <h2 class="text-2xl font-bold lg:text-3xl text-center mb-5">草の履歴</h2>
  <div class="overflow-x-auto">
    <%= turbo_frame_tag 'contributions' do %>
      <table class="table w-full">
        <thead>
          <tr>
            <th>DATE</th>
            <th>KUSA</th>
            <th>MOUNTAIN</th>
            <th>KANA</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'contribution', collection: @contributions %>
        </tbody>
      </table>
      <div class="flex justify-center mt-5">
        <%= paginate @contributions, theme: 'daisyui', class:"rounded-lg" %>
      </div>
    <% end %>
    <div class="text-center mt-5">
      <%= link_to 'ホーム画面へ戻る', root_path, class:"link link-primary"%>
    </div>
  </div>
</div>

