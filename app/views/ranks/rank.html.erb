<%= content_for(:title,"ランキング")%>
<div class="container">
  <div class="py-6 sm:py-8 lg:py-12">
    <h2 class="text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8">ランキング</h2>
    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr>
            <th>Rank</th>
            <th>Name</th>
            <th>Contribution Number</th>
            <th>Mountain</th>
          </tr>
        </thead>
        <tbody class="bg-neutral">
          <%= render partial: 'user_contribution_rank', collection: @user_contribution_ranks %>
        </tbody>
      </table>
    </div>
    <div class="text-center mt-5">
      <%= link_to 'ホーム画面へ戻る', root_path, class:"link link-primary"%>
    </div>
  </div>
</div>